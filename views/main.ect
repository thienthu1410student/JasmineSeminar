<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="bower_components/tether/dist/css/tether.min.css">
  <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,100,500' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="styles/main.css">
  <script type="text/javascript" src="bower_components/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="scripts/main.js"></script>
</head>
<body>
	<div id = "calculator">	
	<div id = "show_area">
		<input id = "txtFieldString"
			type = "text"
			name = "show"
			value = "Result"
		/>
	</div>
    <div id = "support_buttons">
      <button type="button" class="btn support" onclick="getCharacter(this)">(</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">)</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">ln</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">log</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">Dec</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">Hex</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">Bin</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">Oct</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">&#x221a</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">sin</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">cos</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">tan</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">x<sup>2</sup></button>
      <button type="button" class="btn support" onclick="getCharacter(this)">x<sup>3</sup></button>
      <button type="button" class="btn support" onclick="getCharacter(this)">x<sup>y</sup></button>
      <button type="button" class="btn support" onclick="getCharacter(this)">e<sup>x</sup></button>
      <button type="button" class="btn support" onclick="getCharacter(this)">Rad</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">Rand</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">!</button>
      <button type="button" class="btn support" onclick="getCharacter(this)">&pi;</button>
    </div>

    <div id = "numpad_buttons" role="group">
      <button type="button" class="btn clear" onclick="getCharacter(this)">C</button>
      <button type="button" class="btn clear" onclick="getCharacter(this)">&plusmn;</button>
      <button type="button" class="btn clear" onclick="getCharacter(this)">%</button>
  		<button type="button" class="btn numpad" onclick="getCharacter(this)">7</button>
  		<button type="button" class="btn numpad" onclick="getCharacter(this)">8</button>
  		<button type="button" class="btn numpad" onclick="getCharacter(this)">9</button>
  		<button type="button" class="btn numpad" onclick="getCharacter(this)">4</button>
  		<button type="button" class="btn numpad" onclick="getCharacter(this)">5</button>
  		<button type="button" class="btn numpad" onclick="getCharacter(this)">6</button>
  		<button type="button" class="btn numpad" onclick="getCharacter(this)">1</button>
  		<button type="button" class="btn numpad" onclick="getCharacter(this)">2</button>
  		<button type="button" class="btn numpad" onclick="getCharacter(this)">3</button>
  		<button type="button" class="btn base" onclick="getCharacter(this)">0</button>
  		<button type="button" class="btn numpad" onclick="getCharacter(this)">.</button>
    </div> 

    <div id = "sign_buttons">
      <button type="button" class="btn sign" onclick="getCharacter(this)">&divide;</button>
      <button type="button" class="btn sign" onclick="getCharacter(this)">&times;</button>
      <button type="button" class="btn sign" onclick="getCharacter(this)">&mdash;</button>
    	<button type="button" class="btn sign" onclick="getCharacter(this)">&#43;</button>
      <button type="button" class="btn sign" onclick="getCharacter(this)">=</button>
    </div>


   </div>
</body>
</html>
